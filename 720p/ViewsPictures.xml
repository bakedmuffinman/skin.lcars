<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="PictureWrapView">
		<control type="wraplist" id="510">
				<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onup>9000</onup>
            <top>135</top>
            <left>320</left>
            <width>910</width>
            <height>280</height>
            <orientation>horizontal</orientation>
            <itemlayout width="180" height="280">
                <control type="image">
					<left>10</left>
                    <top>4</top>
                    <width>170</width>
                    <height>250</height>
                    <aspectratio>keep</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
                </control>
            </itemlayout>
            <focusedlayout width="180" height="280">
				<control type="image">
                    <left>6</left>
                    <width>178</width>
                    <height>258</height>
                    <aspectratio>keep</aspectratio>
                    <texture background="true">$INFO[ListItem.Icon]</texture>
                    <bordertexture colordiffuse="red">white.png</bordertexture>
                    <bordersize>4</bordersize>
				</control>
            </focusedlayout>
		</control>
		<control type="textbox">
            <top>470</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>190</height>
            <textcolor>yellow</textcolor>
            <align>justify</align>
            <font>font14_plot</font>
            <label>$INFO[ListItem.PictureDateTime,[COLOR=blue]$LOCALIZE[31326][/COLOR] - ][CR][CR]$INFO[ListItem.PictureResolution,[COLOR=blue]$LOCALIZE[31327][/COLOR] - ]</label>
		</control>
        
	</include>
	
</includes>
