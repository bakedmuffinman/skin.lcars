<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="PictureWrapView">
        <control type="panel" id="50">
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onup>9000</onup>
            <top>135</top>
            <left>320</left>
            <width>910</width>
            <height>280</height>
            <orientation>horizontal</orientation>
            <itemlayout width="260" height="280">
                <control type="image">
                    <centerleft>130</centerleft>
                    <centertop>140</centertop>
                    <width>200</width>
                    <height>200</height>
                    <aspectratio>scale</aspectratio>
                    <texture fallback="posterfallback.png">$INFO[ListItem.Icon]</texture>
                </control>
                <control type="label">
                    <centerleft>130</centerleft>
                    <align>center</align>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="260" height="280">
                <control type="image">
                    <centerleft>130</centerleft>
                    <centertop>140</centertop>
                    <width>208</width>
                    <height>208</height>
                    <aspectratio>scale</aspectratio>
                    <texture fallback="posterfallback.png">$INFO[ListItem.Icon]</texture>
                    <bordertexture>white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="label">
                    <centerleft>130</centerleft>
                    <align>center</align>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="textbox">
            <top>470</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>190</height>
            <textcolor>yellow</textcolor>
            <align>justify</align>
            <label>$INFO[ListItem.PictureDateTime,[COLOR=blue]$LOCALIZE[31326][/COLOR] - ][CR]$INFO[ListItem.PictureResolution,[COLOR=blue]$LOCALIZE[31327][/COLOR] - ][CR]$INFO[ListItem.PictureCamModel,[COLOR=blue]$LOCALIZE[21823][/COLOR] - ][CR]$INFO[ListItem.PictureFlashUsed,[COLOR=blue]$LOCALIZE[21833][/COLOR] - ]</label>
        </control>
    </include>
</includes>
