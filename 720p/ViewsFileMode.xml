<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="CommonRootView">
		<control type="panel" id="50">
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onup>9000</onup>
            <top>135</top>
            <left>320</left>
            <width>910</width>
            <height>280</height>
            <orientation>horizontal</orientation>
            <itemlayout width="180" height="280">
                <control type="image">
                    <left>10</left>
                    <top>4</top>
                    <width>170</width>
                    <height>250</height>
                    <aspectratio>keep</aspectratio>
                    <texture fallback="posterfallback.png">$INFO[ListItem.Icon]</texture>
                </control>
                <control type="textbox">
                    <visible>IsEmpty(ListItem.Art(thumb)) | [IsEmpty(ListItem.Art(fanart)) +  ![Container.Content(files)|Container.Content(tvshows)|Container.Content(movies)|Container.Content(musicvideos) |Container.Content(actors)|Container.Content(episodes)]]</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>155</width>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="180" height="280">
                <control type="image">
                    <left>6</left>
                    <width>178</width>
                    <height>258</height>
                    <aspectratio>keep</aspectratio>
                    <texture fallback="posterfallback.png">$INFO[ListItem.Icon]</texture>
                    <bordertexture colordiffuse="red">white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="textbox">
                    <visible>IsEmpty(ListItem.Art(thumb)) | [IsEmpty(ListItem.Art(fanart)) +  ![Container.Content(files)|Container.Content(tvshows)|Container.Content(movies)|Container.Content(musicvideos) |Container.Content(actors)|Container.Content(episodes)]]</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>155</width>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
    </include>
    <include name="addonview">
        <control type="panel" id="510">
            <visible>Container.Content(addons)</visible>
            <animation effect="fade" start="100" end="80" condition="!Control.HasFocus(311) + !Control.HasFocus(60)">Conditional</animation>
