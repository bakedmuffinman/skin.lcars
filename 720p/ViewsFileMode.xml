            <onup>888</onup>
            <onleft>9000</onleft>
            <top>125</top>
            <left>330</left>
            <width>900</width>
            <height>300</height>
            <pagecontrol>60</pagecontrol>
            <ondown>60</ondown>
            <orientation>horizontal</orientation>
            <include>squareshome</include>
        </control>
        <control type="label">
            <visible>Control.HasFocus(510)</visible>
            <top>469</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>30</height>
            <font>font30</font>
            <textcolor>yellow</textcolor>
            <align>center</align>
            <label>$INFO[ListItem.Label] $INFO[ListItem.Label2, â€¢ ]</label>
        </control>
        <control type="textbox">
            <visible>Control.HasFocus(510)</visible>
            <top>500</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>150</height>
            <textcolor>yellow</textcolor>
            <font>font14_plot</font>
            <align>justify</align>
            <label>$INFO[ListItem.Property(Addon.Description)]</label>
        </control>
    </include>
</includes>
