<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include file="defaults.xml"/>
    <include file="ViewsVideoLibrary.xml"/>
    <include file="ViewsMusicLibrary.xml"/>
    <include name="750">
        <control type="group" id="750">
            <control type="group">
                <animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
                <visible>Container(9000).HasFocus(8)</visible>
                <control type="multiimage">
                    <description>map multiimage</description>
                    <left>325</left>
                    <top>475</top>
                    <width>300</width>
                    <height>174</height>
                    <imagepath>$INFO[Window(Weather).Property(MapPath)]</imagepath>
                    <timeperimage>500</timeperimage>
                    <pauseatend>1000</pauseatend>
                    <fadetime>0</fadetime>
                    <randomize>false</randomize>
                    <loop>yes</loop>
                    <aligny>center</aligny>
                </control>
                <control type="textbox">
                    <left>650</left>
                    <top>485</top>
                    <width>300</width>
                    <height>174</height>
                    <textcolor>yellow</textcolor>
                    <label>$INFO[Window(Weather).Property(Location)][CR][CR]$INFO[Window(Weather).Property(Current.Condition)][CR][CR]$INFO[Window(Weather).Property(Current.Humidity)] HUMIDITY[CR][CR]WIND $INFO[Window(Weather).Property(Current.Wind)]</label>
                </control>
            </control>
            <control type="fixedlist" id="311">
                <!--movies-->
                <animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
                <visible>Container(9000).HasFocus(1)</visible>
                <onup>9000</onup>
                <onleft>9000</onleft>
                <top>135</top>
                <left>320</left>
                <width>960</width>
                <height>280</height>
                <orientation>horizontal</orientation>
                <itemlayout width="180" height="280">
                    <control type="image">
                        <left>10</left>
                        <top>4</top>
                        <width>170</width>
                        <height>250</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$VAR[Poster]</texture>
                    </control>
                </itemlayout>
                <focusedlayout width="180" height="280">
                    <control type="image">
                        <left>6</left>
                        <width>178</width>
                        <height>258</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$VAR[Poster]</texture>
                        <bordertexture>white.png</bordertexture>
                        <bordersize>4</bordersize>
                    </control>
                </focusedlayout>
                <content target="video">videodb://recentlyaddedmovies/</content>
            </control>
            <control type="fixedlist" id="311">
                <!--tv-->
                <animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
                <visible>Container(9000).HasFocus(2)</visible>
                <onup>9000</onup>
                <onleft>9000</onleft>
                <top>135</top>
                <left>320</left>
                <width>960</width>
                <height>280</height>
                <orientation>horizontal</orientation>
                <itemlayout width="180" height="280">
                    <control type="image">
                        <left>10</left>
                        <top>4</top>
                        <width>170</width>
                        <height>250</height>
                        <aspectratio>keep</aspectratio>
                        <info>ListItem.Art(tvshow.poster)</info>
                    </control>
                </itemlayout>
                <focusedlayout width="180" height="280">
                    <control type="image">
                        <left>6</left>
                        <width>178</width>
                        <height>258</height>
                        <aspectratio>keep</aspectratio>
                        <info>ListItem.Art(tvshow.poster)</info>
                        <bordertexture>white.png</bordertexture>
                        <bordersize>4</bordersize>
                    </control>
                </focusedlayout>
                <content target="video">videodb://recentlyaddedepisodes/</content>
            </control>
            <control type="fixedlist" id="311">
                <!--music-->
                <animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
                <visible>Container(9000).HasFocus(3)</visible>
                <onup>9000</onup>
                <onleft>9000</onleft>
                <top>125</top>
                <left>330</left>
                <width>960</width>
                <height>300</height>
                <orientation>horizontal</orientation>
                <itemlayout width="228" height="280">
                    <control type="image">
                        <top>74</top>
                        <centerleft>114</centerleft>
                        <width>200</width>
                        <height>200</height>
                        <aspectratio>keep</aspectratio>
                        <texture fallback="DefaultAlbumcover.png">$INFO[ListItem.Thumb]</texture>
                    </control>
                    <control type="image">
                        <centerleft>114</centerleft>
                        <width>218</width>
                        <height>65</height>
                        <texture colordiffuse="design">white.png</texture>
                    </control>
                    <control type="textbox">
                        <align>center</align>
                        <centerleft>114</centerleft>
                        <font>font16</font>
                        <width>208</width>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout width="228" height="280">
                    <control type="image">
                        <top>70</top>
                        <centerleft>114</centerleft>
                        <width>208</width>
                        <height>208</height>
                        <aspectratio>keep</aspectratio>
                        <texture fallback="DefaultAlbumcover.png">$INFO[ListItem.Thumb]</texture>
                        <bordertexture>white.png</bordertexture>
                        <bordersize>4</bordersize>
                    </control>
                    <control type="image">
                        <centerleft>114</centerleft>
                        <width>218</width>
                        <height>65</height>
                        <texture colordiffuse="design">white.png</texture>
                    </control>
                    <control type="textbox">
                        <centerleft>114</centerleft>
                        <align>center</align>
                        <font>font16</font>
                        <width>208</width>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
                <content target="music">musicdb://recentlyaddedalbums/</content>
            </control>
        </control>
    </include>
    <include name="9000butts">
        <width>155</width>
        <height>60</height>
        <texturenofocus colordiffuse="design">white.png</texturenofocus>
        <texturefocus colordiffuse="blue">white.png</texturefocus>
        <align>right</align>
    </include>

    <include name="allwindows">
        <control type="image">
            <top>15</top>
            <left>1230</left>
            <width>40</width>
            <height>39</height>
            <texture colordiffuse="design">bullet.png</texture>
        </control>
        <control type="image">
            <top>669</top>
            <left>660</left>
            <width>280</width>
            <height>39</height>
            <texture colordiffuse="design">white.png</texture>
        </control>
        <control type="image">
            <top>669</top>
            <left>945</left>
            <width>140</width>
            <height>39</height>
            <texture colordiffuse="design">white.png</texture>
        </control>
        <control type="image">
            <top>669</top>
            <left>1090</left>
            <width>136</width>
            <height>39</height>
            <texture colordiffuse="design">white.png</texture>
        </control>
        <control type="label">
            <top>18</top>
            <left>1020</left>
            <height>39</height>
            <width>200</width>
            <font>font30</font>
            <textcolor>yellow</textcolor>
            <label>USS XBMC  •  NCC-1929</label>
        </control>
        <control type="label">
            <visible>System.InternetState</visible>
            <top>670</top>
            <left>1090</left>
            <width>136</width>
            <height>39</height>
            <label>ONLINE</label>
            <aligny>center</aligny>
            <align>center</align>
            <font>font30</font>
        </control>
        <control type="label">
            <top>672</top>
            <left>330</left>
            <textcolor>yellow</textcolor>
            <font>font30</font>
            <width>330</width>
            <height>40</height>
            <label>STARDATE : $INFO[System.Date] • $INFO[System.Time]</label>
        </control>
    </include>

    <variable name="Poster">
        <value condition="Container.Content(episodes) + !IsEmpty(ListItem.Art(tvshow.poster))">$INFO[ListItem.Art(tvshow.poster)]</value>
        <value condition="!IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
        <!--<value condition="StringCompare(ListItem.Label,..)">$INFO[ListItem.Icon]</value>-->
        <!--<value condition="!IsEmpty(ListItem.Thumb))">$INFO[ListItem.Thumb]</value>-->
        <value>$INFO[ListItem.Icon]</value>
    </variable>
</includes>
