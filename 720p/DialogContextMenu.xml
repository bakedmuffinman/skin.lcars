<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>1000</defaultcontrol>
    <include>dialogeffect</include>
    <coordinates>
        <origin x="330" y="100" />
    </coordinates>
    <controls>
        <control type="image" id="999">
            <description>background image</description>
            <centertop></centertop>
            <width>620</width>
            <height>750</height>
            <texture border="60">dialog.png</texture>
        </control>
        <control type="grouplist" id="996">
            <description>grouplist for context buttons</description>
            <left>150</left>
            <top>40</top>
            <width>320</width>
            <height max="670">auto</height>
            <itemgap>2</itemgap>
            <control type="button" id="1500">
                <visible>System.HasAddon(script.cinema.experience) + Container.Content(movies)</visible>
                <width>320</width>
                <height>40</height>
                <align>center</align>
                <aligny>center</aligny>
                <label>Cinema</label>
                <texturenofocus colordiffuse="green" border="20">whiteallrounded.png</texturenofocus>
                <texturefocus colordiffuse="blue" border="20">whiteallrounded.png</texturefocus>
                <onclick>XBMC.RunScript(script.cinema.experience)</onclick>
            </control>
        </control>
        <control type="button" id="1000">
            <description>button template</description>
            <width>320</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <texturenofocus colordiffuse="green" border="20">whiteallrounded.png</texturenofocus>
            <texturefocus colordiffuse="blue" border="20">whiteallrounded.png</texturefocus>
        </control>
    </controls>
</window>
