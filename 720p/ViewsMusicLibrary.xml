<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="musiclcarsview">
        <control type="panel" id="50">
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onleft>9000</onleft>
            <top>100</top>
            <left>200</left>
            <width>1045</width>
            <height>520</height>
            <itemlayout width="260" height="260">
                <control type="image">
                    <left>10</left>
                    <top>4</top>
                    <width>250</width>
                    <height>250</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$VAR[poster]</texture>
                </control>
               <control type="textbox">
                   <visible>Container.Content(albums) | Container.Content(artists)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                   <textcolor>yellow</textcolor>
                   <shadowcolor>88000000</shadowcolor>
                    <info>ListItem.Label</info>
                </control>
                 <control type="textbox">
                    <visible>Container.Content(years) | Container.Content(genres)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="260" height="260">
                <control type="image">
                    <left>6</left>
                    <width>258</width>
                    <height>258</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$VAR[poster]</texture>
                    <bordertexture>white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="textbox">
                    <visible>Container.Content(albums) | Container.Content(artists)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <textcolor>yellow</textcolor>
                   <shadowcolor>88000000</shadowcolor>
                    <info>ListItem.Label</info>
                </control>
                <control type="textbox">
                    <visible>Container.Content(years) | Container.Content(genres)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>

            </focusedlayout>
        </control>
        <control type="textbox">
            <top>470</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>190</height>
            <textcolor>yellow</textcolor>
            <align>justify</align>
            <font>font14_plot</font>
            <info>ListItem.Plot</info>
        </control>
    </include>
</includes>
