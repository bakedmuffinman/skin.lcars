<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="addonslcarsview">
        <control type="image">
            <visible>Container.Content(artists)</visible>
            <width>1280</width>
            <height>720</height>
            <texture>artistsbg.jpg</texture>
        </control>
        <control type="panel" id="50">
            <visible>!Container.Content(artists)</visible>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onleft>9000</onleft>
            <top>100</top>
            <left>200</left>
            <width>1045</width>
            <height>520</height>
            <itemlayout width="260" height="260">
                <control type="image">
                    <left>10</left>
                    <top>4</top>
                    <width>250</width>
                    <height>250</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$VAR[poster]</texture>
                </control>
                <control type="textbox">
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <textcolor>yellow</textcolor>
                    <shadowcolor>88000000</shadowcolor>
                    <label>$INFO[ListItem.Label] [CR]$INFO[ListItem.Label2] </label>
                </control>
            </itemlayout>
            <focusedlayout width="260" height="260">
                <control type="image">
                    <left>6</left>
                    <width>258</width>
                    <height>258</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$VAR[poster]</texture>
                    <bordertexture colordiffuse="red">white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="textbox">
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <textcolor>yellow</textcolor>
                    <shadowcolor>88000000</shadowcolor>
                    <label>$INFO[ListItem.Label] [CR]$INFO[ListItem.Label2] </label>
                </control>

            </focusedlayout>
        </control>
        <control type="textbox">
            <top>470</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>190</height>
            <textcolor>yellow</textcolor>
            <align>justify</align>
            <font>font14_plot</font>
            <info>ListItem.DBID</info>
        </control>
    </include>
</includes>