<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="addonslcarsview">
        <control type="image">
            <visible>Container.Content(artists)</visible>
            <width>1280</width>
            <height>720</height>
            <texture>artistsbg.jpg</texture>
        </control>
        <control type="panel" id="50">
            <visible>!Container.Content(artists)</visible>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onleft>9000</onleft>
            <top>100</top>
            <left>200</left>
            <width>1045</width>
            <height>520</height>
            <itemlayout width="510" height="260">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>500</width>
                    <height>250</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>dialog.png</texture>
                </control>
                <control type="image">
                    <left>20</left>
                    <top>20</top>
                    <width>230</width>
                    <height>210</height>
                    <bordertexture>white.png</bordertexture>
                    <bordersize>4</bordersize>
                    <aspectratio>stretch</aspectratio>
                    <texture fallback="posterfallback.png">$VAR[poster]</texture>
                </control>
                <control type="textbox">
                    <top>20</top>
                    <right>30</right>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>font30</font>
                    <width>220</width>
                    <height>240</height>
                    <textcolor>yellow</textcolor>
                    <shadowcolor>88000000</shadowcolor>
                    <label>$INFO[ListItem.Label] [CR]$INFO[ListItem.Label2] </label>
                </control>
            </itemlayout>
            <focusedlayout width="510" height="260">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>500</width>
                    <height>250</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>dialog_fo.png</texture>
                </control>
                <control type="image">
                    <left>20</left>
                    <top>20</top>
                    <width>230</width>
                    <height>210</height>
                    <aspectratio>stretch</aspectratio>
                    <bordertexture>white.png</bordertexture>
                    <bordersize>4</bordersize>
                    <texture fallback="posterfallback.png">$VAR[poster]</texture>
                </control>
                <control type="textbox">
                    <top>20</top>
                    <right>30</right>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>font30</font>
                    <width>220</width>
                    <height>240</height>
                    <textcolor>yellow</textcolor>
                    <shadowcolor>88000000</shadowcolor>
                    <label>$INFO[ListItem.Label] [CR]$INFO[ListItem.Label2] </label>
                </control>
            </focusedlayout>
        </control>
        <control type="textbox">
            <top>470</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>190</height>
            <textcolor>yellow</textcolor>
            <align>justify</align>
            <font>font14_plot</font>
            <info>ListItem.DBID</info>
        </control>
    </include>
</includes>