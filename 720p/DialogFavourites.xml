<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="group">
			<top>40</top>
			<visible>!Window.IsVisible(FileBrowser)</visible>
			<animation effect="slide" start="1100,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="1100,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<description>background image</description>
				<left>185</left>
				<top>22</top>
				<width>1250</width>
				<height>600</height>
				<colordiffuse>design</colordiffuse>
				<texture border="130">dialog3.png</texture>
			</control>
			<control type="label">
				<description>header label</description>
				<top>35</top>
				<left>270</left>
				<width>675</width>
				<height>40</height>
				<label>$INFO[ListItem.label]</label>
				<font>font30</font>
				<align>left</align>
			</control>
			<control type="image">
				<left>200</left>
				<top>574</top>
				<width>40</width>
				<height>40</height>
				<texture colordiffuse="design" flipx="true">bullet.png</texture>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>247</left>
				<top>574</top>
				<width>1100</width>
				<height>38</height>
				<label>close</label>
				<onclick>PreviousMenu</onclick>
				<texturenofocus colordiffuse="design"  border="20">white.png</texturenofocus>
				<texturefocus colordiffuse="white"  border="20">white.png</texturefocus>
				<textoffsetx>50</textoffsetx>
				<align>left</align>
				<aligny>center</aligny>
				<onleft>450</onleft>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
			</control>
			<control type="panel" id="450">
				<animation effect="fade" start="100" end="80" condition="!Control.HasFocus(450) + !Control.HasFocus(30)">Conditional</animation>
                		<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
                		<left>270</left>
				<top>80</top>
				<width>1000</width>
				<height>480</height>
				<onup>450</onup>
				<onleft>Dialog.Close(Favourites)</onleft>
				<onright>30</onright>
				<ondown>450</ondown>
				<pagecontrol>30</pagecontrol>
				<scrolltime>200</scrolltime>
                		<orientation>vertical</orientation>
				<itemlayout width="160" height="160">
                    		<control type="image">
                        		<left>10</left>
                        		<top>4</top>
                        		<width>150</width>
                        		<height>150</height>
                        		<aspectratio>scale</aspectratio>
                        		<texture>$INFO[ListItem.Icon]</texture>
					<bordertexture border="40">shadow2.png</bordertexture>
					<bordersize>10</bordersize>
                    		</control>
                		</itemlayout>
                		<focusedlayout width="160" height="160">
                    		<control type="image">
                        		<left>6</left>
                        		<width>158</width>
                        		<height>158</height>
                        		<aspectratio>scale</aspectratio>
                        		<texture>$INFO[ListItem.Icon]</texture>
                        		<bordertexture  colordiffuse="red" border="40">shadow2.png</bordertexture>
					<bordersize>10</bordersize>
				</control>
                		</focusedlayout>
			</control>
			<control type="scrollbar" id="30">
				<left>40r</left>
				<top>80</top>
				<width>10</width>
				<height>490</height>
				<texturesliderbackground border="4">ScrollbarBG_light.png</texturesliderbackground>
				<textureslidernib border="4">ScrollerNF.png</textureslidernib>
				<textureslidernibfocus>ScrollerFO.png</textureslidernibfocus>
				<onleft>450</onleft>
				<onright>450</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			
			<control type="label">
				<description>Page label</description>
				<right>30</right>
				<top>574</top>
				<width>350</width>
				<height>30</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>black</textcolor>
				<label>($INFO[Container(450).NumItems]) $LOCALIZE[31025] - $LOCALIZE[31024] ($INFO[Container(450).CurrentPage]/$INFO[Container(450).NumPages])</label>
			</control>
		</control>
	</controls>
</window>
