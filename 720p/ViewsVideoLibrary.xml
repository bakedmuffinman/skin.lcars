<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="lcarsview">
        <control type="panel" id="50">
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onup>9000</onup>
            <top>135</top>
            <left>320</left>
            <width>910</width>
            <height>280</height>
            <orientation>horizontal</orientation>
            <itemlayout width="180" height="280">
                <control type="image">
                    <visible>!Container.Content(episodes)</visible>
                    <left>10</left>
                    <top>4</top>
                    <width>170</width>
                    <height>250</height>
                    <aspectratio>keep</aspectratio>
                    <texture fallback="posterfallback.png">$VAR[poster]</texture>
                </control>
                <control type="image">
                    <visible>Container.Content(episodes)</visible>
                    <left>10</left>
                    <top>4</top>
                    <width>170</width>
                    <height>250</height>
                    <aspectratio>scale</aspectratio>
                    <texture fallback="posterfallback.png">$VAR[poster]</texture>
                </control>
                <control type="textbox">
                    <visible>IsEmpty(ListItem.Art(thumb)) | [IsEmpty(ListItem.Art(fanart)) +  ![Container.Content(files)|Container.Content(tvshows)|Container.Content(movies)|Container.Content(musicvideos) |Container.Content(actors)|Container.Content(episodes)]]</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>155</width>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="180" height="280">
                <control type="image">
                    <visible>!Container.Content(episodes)</visible>
                    <left>6</left>
                    <width>178</width>
                    <height>258</height>
                    <aspectratio>keep</aspectratio>
                    <texture fallback="posterfallback.png">$VAR[poster]</texture>
                    <bordertexture colordiffuse="red">white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="image">
                    <visible>Container.Content(episodes)</visible>
                    <left>6</left>
                    <width>178</width>
                    <height>258</height>
                    <aspectratio>scale</aspectratio>
                    <texture fallback="posterfallback.png">$VAR[poster]</texture>
                    <bordertexture colordiffuse="red">white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="textbox">
                    <visible>IsEmpty(ListItem.Art(thumb)) | [IsEmpty(ListItem.Art(fanart)) +  ![Container.Content(files)|Container.Content(tvshows)|Container.Content(movies)|Container.Content(musicvideos) |Container.Content(actors)|Container.Content(episodes)]]</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>155</width>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="textbox">
            <top>470</top>
            <centerleft>670</centerleft>
            <width>660</width>
            <height>190</height>
            <textcolor>yellow</textcolor>
            <align>justify</align>
            <font>font14_plot</font>
            <info>ListItem.Plot</info>
        </control>
        <control type="label">
            <top>180</top>
            <left>153</left>
            <align>right</align>
            <width>145</width>
            <height>40</height>
            <label>$VAR[MediaFlag_MPAA]</label>
        </control>
        <control type="label">
            <top>272</top>
            <left>153</left>
            <align>right</align>
            <width>145</width>
            <height>40</height>
            <label>$INFO[ListItem.Year]</label>
        </control>
        <control type="label">
            <visible>Control.HasFocus(50)</visible>
            <top>417</top>
            <centerleft>475</centerleft>
            <align>right</align>
            <width>250</width>
            <height>30</height>
            <font>font12</font>
            <label>31011</label>
        </control>
		<control type="label">
			<visible>!IsEmpty(ListItem.videoresolution) + !IntegerGreaterThan(ListItem.videoresolution,719)</visible>
			<top>364</top>
            <left>153</left>
            <align>right</align>
            <width>145</width>
            <height>40</height>
            <label>SD: $INFO[ListItem.VideoResolution]</label>
		</control>
		<control type="label">
			<visible>!IsEmpty(ListItem.videoresolution) + IntegerGreaterThan(ListItem.videoresolution,719)</visible>
			<top>364</top>
            <left>153</left>
            <align>right</align>
            <width>145</width>
            <height>40</height>
            <label>HD : $INFO[ListItem.VideoResolution]</label>
		</control>
    </include>
</includes>
